<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport"
          content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Prueba PLM</title>
    <link rel="stylesheet" href="css/styles.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
          integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
</head>
<body>
<nav class="navbar navbar-expand-lg navbar-light bg-light">
    <div class="container-fluid">
        <a class="navbar-brand" href="/">
            <img src="/imgs/logo.png" alt="Logo">
        </a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavAltMarkup"
                aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
            <div class="navbar-nav">
                <a class="nav-link" aria-current="page" href="/">Inicio</a>
                <a class="nav-link active" aria-current="page" href="/registros">Registros</a>
            </div>
        </div>
    </div>
</nav>
<div class="container">
    <div class="table_container">
        <h1 class="table_title">Registros</h1>
        <table class="table table-bordered">
            <thead>
            <tr>
                <th scope="col">ID</th>
                <th scope="col">Tipo de Identificacion</th>
                <th scope="col">Nombre</th>
                <th scope="col">Apellidos</th>
                <th scope="col">Email</th>
                <th scope="col">Celular</th>
                <th scope="col">Fecha de Nacimiento</th>
                <th scope="col">Archivo</th>
                <th scope="col">Accion</th>
            </tr>
            </thead>
            <tbody>
            <% for(let i = 0; i < users.length; i++){  %>
                <tr>
                    <th scope="row"><%= users[i].id %></th>
                    <td><%= users[i].id_type %></td>
                    <td><%= users[i].name %></td>
                    <td><%= users[i].last_name %></td>
                    <td><%= users[i].email %></td>
                    <td><%= users[i].cellphone %></td>
                    <td><%= (users[i].born_date.getFullYear()+'-'+users[i].born_date.getMonth()+'-'+users[i].born_date.getDay()) %></td>
                    <td><%= users[i].file %></td>
                    <td><a href="/delete/<%= users[i].id %>">Eliminar</a></td>
                </tr>
            <% } %>
            </tbody>
        </table>
    </div>

</div>
</body>
</html>
